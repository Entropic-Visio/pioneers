  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "sass": "^1.74.1",
    "supervisor": "^0.12.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pug": "^3.0.2"
  }
}
